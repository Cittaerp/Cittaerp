@model  CittaErp.Models.vw_genlay
@{
    CittaErp.Models.psess psess = (CittaErp.Models.psess)Session["psess"];
  //  string multi_curenchk = pubsess.multi_currency;
    
    string lbl1 = psess.temp1;
}            
    <div class="tabbable">
        <ul class="nav nav-tabs" id="tabs">
            <li class="active"><a href="#tab1" data-toggle="tab">Address Information</a></li>
            <li><a href="#tab2" data-toggle="tab">Contact Information</a></li>
            
        </ul>
        <br />
        <div class="tab-content">
            <div class="tab-pane active" id="tab1">
                
                    <div class="form-group">
                        <label for="@lbl1" class="col-sm-5 control-label">@lbl1</label>
                        <div class="col-sm-3">
                            @Html.DropDownListFor(m => m.vwstring0, ViewBag.code as SelectList, ViewBag.action_flag == "Create" ? (object)new { @class = "form-control", @maxlength = 10 } : new { @class = "form-control", @disabled = "disabled", @maxlength = 10 })
                            @Html.ValidationMessageFor(m => m.vwstring0)
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label for="PeriodNumber" class="col-sm-5 control-label">Address ID</label>
                        <div class="col-sm-3">

                            @Html.TextBoxFor(m => m.vwstrarray0[0], new { @class = "form-control", maxlength = 20 })
                        </div>
                    </div>*@
                <div class="form-group">
                    <label for="Branch/LocationAlias" class="col-sm-5 control-label">Branch/Location Alias</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.vwstrarray0[0], new { @class = "form-control"})
                    </div>
                </div>

                    <div class="form-group">
                        <label for="Address" class="col-sm-5 control-label">Address</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(m => m.vwstrarray0[1], new { @class = "form-control", maxlength = 100 })
                            @Html.TextBoxFor(m => m.vwstrarray0[2], new { @class = "form-control", maxlength = 100 })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="City" class="col-sm-5 control-label">City</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.vwstrarray0[3], new { @class = "form-control"})
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="postal_code" class="col-sm-5 control-label">Postal Code</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.vwstrarray0[4], new { @class = "form-control"})
                        </div>
                    </div>

                <div class="form-group">
                    <label for="State" class="col-sm-5 control-label">State/Province</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.vwstrarray0[6], new { @class = "form-control", id = "state" })
                    </div>
                </div>

                    <div class="form-group">
                        <label for="Country" class="col-sm-5 control-label">Country</label>
                        <div class="col-sm-3">
                            @Html.DropDownListFor(m => m.vwstrarray0[5], ViewBag.country as SelectList, "Select", new { @class = "form-control", id = "country" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Email" class="col-sm-5 control-label">Email</label>
                        <div class="col-sm-4">
                            @Html.TextBoxFor(m => m.vwstrarray0[7], new { @class = "form-control", type = "email" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phonenumber" class="col-sm-5 control-label">Phone Number</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.vwstrarray0[8], new { @class = "form-control"})
                        </div>
                    </div>
                  
                @Html.Partial("_navbuttonsNext")
                </div>
            <div class="tab-pane" id="tab2">
                <div class="form-group">
                    <label for="contactname" class="col-sm-5 control-label"> Contact Name</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.vwstrarray0[10], new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="contactdept" class="col-sm-5 control-label">Department</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(m => m.vwstrarray0[11], new { @class = "form-control", maxlength = 50 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="JobTitle" class="col-sm-5 control-label">Job Title</label>
                    <div class="col-sm-5">
                        @Html.TextBoxFor(m => m.vwstrarray0[14], new { @class = "form-control", maxlength = 50 })
                    </div>
                </div>
                <div class="form-group">
                    <label for="contact email" class="col-sm-5 control-label">Email</label>
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.vwstrarray0[12], new { @class = "form-control", type = "email" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="contactphone" class="col-sm-5 control-label">Phone</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.vwstrarray0[13], new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Note" class="col-sm-5 control-label"> Note</label>
                    <div class="col-sm-5">
                        @Html.TextAreaFor(m => m.vwstrarray0[9], new { @class = "form-control", rows = "6" })
                    </div>
                </div>

                @*<div class="form-group">
                    <label for="DateTo" class="col-sm-5 control-label">Inactive?</label>
                    <div class="col-sm-1">
                        @Html.CheckBoxFor(m => m.vwbool0, new { @class = "form-control", style = "width : 15px" })
                    </div>
                </div>*@
                <div class="row form-group">
                    <label class="col-sm-5 control-label">Inactive</label>
                    <div class="col-sm-6 mycheckq">
                        @Html.CheckBoxFor(model => Model.vwbool0, new { @id = "activate_yesno" })
                        <label for="activate_yesno">
                            @( Model.vwbool0 ? "On" : "Off")
                        </label>
                    </div>
                </div>
                @Html.Partial("_navbuttonsPrev")
            </div>
           </div>
        </div>       
