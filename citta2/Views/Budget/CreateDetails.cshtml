@section Scripts {
    <script>
        $(document).ready(function () {
            $("#changer").hide();
            $("#id_base").hide();


            $("#submit").hide();

            $("#hide_details").click(function () {
                $("#submit").show();
                $("#hide_details").hide();
            });

            $("#submit").click(function () {
                $("#details").show();
                $("#submit").hide();
                $("#hide_details").show();

            });

            var dis_rate = $("#fx_flag").val();
            if (dis_rate == "Y") {
                $("#changer").show();
                $("#id_base").show();
            }
            else {
                $("#changer").hide();
                $("#id_base").hide();
            }

            $("#id_tran").hide();
        });
    </script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/CittaScripts/budget.js")"></script>
}
