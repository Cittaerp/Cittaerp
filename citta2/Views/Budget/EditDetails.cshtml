@section Scripts {
    <script>
        $(document).ready(function () {
            $("#submit").hide();




            $("#hide_details").click(function () {
                $("#submit").show();
                $("#hide_details").hide();
            });

            $("#submit").click(function () {
                $("#details").show();
                $("#submit").hide();
                $("#hide_details").show();

            });

            var amtcheck = $("#curflag").val();
            if (amtcheck == "N") {
                $("#changer").show();
                $("#id_base").show();
            }
            else {
                $("#changer").hide();
                $("#id_base").hide();
            }

            var asset = $("#asset").val();

            if (asset == "Y") {
                $("#click").show('slow');
            }
            else
                $("#click").hide();

        });

    </script>
