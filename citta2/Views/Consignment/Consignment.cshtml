@model  CittaErp.Models.vw_genlay
@{
    ViewBag.Title = "Consignment";
}



    
    <div class="form-group">
        <label for="CompanyCode" class="col-sm-5 control-label">Consignment Id </label>
        <div class="col-sm-2">
            @Html.TextBoxFor(m => m.vwstring0, ViewBag.action_flag == "Create" ? (object)new { @class = "form-control", required = "required", @maxlength = 10 } : new { @disabled = "disabled", @class = "form-control", @maxlength = 10 })
        </div>
    </div>

    <div class="form-group">
        <label for="CompanyCode" class="col-sm-5 control-label">Description</label>
        <div class="col-sm-6">
            @Html.TextBoxFor(m => m.vwstring1, new { @class = "form-control", required = "required"})
        </div>
    </div>

    <div class="form-group">
        <label for="CompanyCode" class="col-sm-5 control-label">GL Account</label>
        <div class="col-sm-3">
            @Html.DropDownListFor(m => m.vwstring2, ViewBag.cart as SelectList, "Select", new { @class = "form-control", required = "required" })
        </div>
    </div>

    <div class="form-group">
        <label for="CompanyCode" class="col-sm-5 control-label">Currency Id</label>
        <div class="col-sm-3">
            @Html.DropDownListFor(m => m.vwstring3, ViewBag.currency as SelectList, "Select", new { @class = "form-control", required = "required" })
        </div>
    </div>
    <div class="form-group">
    <label for="CompanyCode" class="col-sm-5 control-label">Oversea Purchase Order</label>
    <div class="col-sm-3">
        @Html.DropDownListFor(m => m.vwstring5, ViewBag.ospo as SelectList, "Select", new { @class = "form-control", required = "required" })
    </div>
</div>

    <div class="form-group">
        <label for="CompanyCode" class="col-sm-5 control-label">Allocation Basis</label>
        <div class="col-sm-3">
            @Html.DropDownListFor(m => m.vwstring4, ViewBag.alloc as SelectList, "Select", new { @class = "form-control", required = "required" })
        </div>
    </div>

    
   <div class="row form-group">
    <label class="col-sm-5 control-label">Inactive</label>
    <div class="col-sm-6 mycheckq">
        @Html.CheckBoxFor(model => Model.vwbool0, new { @id = "activate_yesno" })
        <label for="activate_yesno">
            @( Model.vwbool0 ? "On" : "Off")
        </label>
    </div>
</div>

    <div class="form-group">
        <label for="CompanyName" class="col-sm-5 control-label">Note</label>
        <div class="col-sm-7">
            @Html.TextAreaFor(m => m.vwstring6, new { @class = "form-control", rows = "6" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-5 control-label"> Attach document</label>
        <div class="col-sm-7">
            <input type="file" name="photofile" multiple />
        </div>
    </div>
    @if (ViewBag.anapict != null)
    {
        <div class="form-group">
            @foreach (var item in ViewBag.anapict)
            {
                <img src="data:image/png;base64, @Convert.ToBase64String(item.document_image, 0, item.document_image.Length)" width="100" height="100" />
            }

        </div>
    }









