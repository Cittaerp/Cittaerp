@model  IEnumerable<CittaErp.Models.vw_genlay>
@{
    ViewBag.Title = "discount";   
}
@*Html.Partial("menu")*@
<h3>Discount Defination Listing</h3>
@Html.ActionLink("Add New", "Create", "", new { @class = "btn btn-primary", @style = "color:white" })


        <table class="myTable1 display">

    <thead>
        <tr>
            <th>Discount ID</th>
            <th>Discount Name</th>
            <th>Discount Type</th>
            <th>Date From</th>
            <th>Date To</th>
            <th>Status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.vwstring0</td>
                <td>@item.vwstring1</td>
                <td>@item.vwstring5</td>
                @if(item.vwstring2 != ""){
                    <td>@item.vwstring2.Substring(6, 2)/@item.vwstring2.Substring(4, 2)/@item.vwstring2.Substring(0, 4)</td>
                }           
                else{
	                <td>01/01/0001</td>
                }
                @if(item.vwstring3 != ""){
                <td>@item.vwstring3.Substring(6, 2)/@item.vwstring3.Substring(4, 2)/@item.vwstring3.Substring(0, 4)</td>
                }
                else { 
                    <td>01/01/9999</td>
                }
                <td>@item.vwstring4</td>
                <td>
                    @Html.ActionLink("E", "Edit", new { key1 = @item.vwstring0 }, new { @class = "btn btn-warning btn-xs glyphicon glyphicon-pencil" })
                </td>
                <td><span class="btn btn-danger btn-xs deleteitem" data-keyg="@item.vwstring0"> <i class="glyphicon glyphicon-trash "></i> </span></td>
            </tr>
        }

    </tbody>

</table>
