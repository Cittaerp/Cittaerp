@section Scripts {
    <script>
        $(document).ready(function () {

             $("#reval").hide();

            $("#dis").hide();

            $("#disyes").click(function () {
                $("#dis").show();
            });

            $("#disno").click(function () {
                $("#dis").hide();
            });

            $("#revyes").click(function () {
                $("#reval").show();
            });

            $("#revno").click(function () {
                $("#reval").hide();
            });

            

            //$("#com").click(function () {
            //    var a = $("#com").val();
            //    alert(a);
            //});

            var elements = document.querySelectorAll(".prevtab, .nexttab, #t1, #t2, #t3, #t4, #t5, #t6, #t7,  #t8, #t9");
            for (var i = 0; i < elements.length; i++) {

                elements[i].addEventListener("click", function () {
                    var a = $("#com").val();
                 $("#dep").val(a);
                });
            }



            $("#nature").change(function () {
                var URLext = $("#nature").val();
                if (URLext == "02") {

                    var myOptions = {
                        am: 'Amotization',
                    };
                    var mySelect = $("#type");
                    $.each(myOptions, function (val, text) {
                        mySelect.append(
                            $('<option></option>').val(val).html(text)
                        );
                    });

                    $("#type option[value='rb']").remove();
                    $("#type option[value='sd']").remove();
                    $("#type option[value='st']").remove();
                    $("#type option[value='ua']").remove();

                }



                if (URLext == "01") {

                    var myOptions = {
                        rb: 'Reducing Balance',
                        sd: 'Sum-of-Digit',
                        st: 'Straight Line',
                        ua: 'Unit-of-Activity'
                    };
                    var mySelect = $("#type");
                    $.each(myOptions, function (val, text) {
                        mySelect.append(
                            $('<option></option>').val(val).html(text)
                        );
                    });

                    $("#type option[value='am']").remove();
                }
                
            });

            });

    
        $("#id_uor").change(function () {
            var items = '';
            var URLext = $('#id_uor').val();
            if (URLext == "H") {
                $("#hour").show();
                $("#day").hide();
                $("#unit").hide();
            }
            else if (URLext == "D") {
                $("#day").show();
                $("#hour").hide();
                $("#unit").hide();
            }
            else if (URLext == "U") {
                $("#unit").show();
                $("#day").hide();
                $("#hour").hide();
            }
        });

     </script>
}
