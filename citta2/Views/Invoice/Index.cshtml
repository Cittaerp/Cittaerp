@model  IEnumerable<CittaErp.Models.vw_genlay>
@{
    ViewBag.Title = "sales";
}
@*Html.Partial("menu")*@
<h3>Invoicing </h3>
@Html.ActionLink("Add New", "CreateHeader", "", new { @class = "btn btn-primary", @style = "color:white" })


<table class="myTable1 display">

    <thead>
        <tr>
            <th>Invoice reference</th>
            <th>Customer</th>
            <th>Currency code</th>
            <th>Invoice amount</th>
            <th>Invoice date</th>
            @*<th>Quote expiration date</th>*@
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.vwstring0</td>
                <td>@item.vwstring1</td>
                <td>@item.vwstring2</td>
                <td>@item.vwdecimal0.ToString("#,#00.00")</td>
                <td>@item.vwdate0.ToString("dd/MM/yyyy")</td>
                @*<td>@item.vwdate1.ToString("dd/MM/yyyy")</td>*@
                <td>
                    @Html.ActionLink("E", "Edit", new { key1 = @item.vwint0 }, new { @class = "btn btn-warning btn-xs glyphicon glyphicon-pencil" })
                </td>
                <td><span class="btn btn-danger btn-xs deleteitem" data-keyg="@item.vwint0"> <i class="glyphicon glyphicon-trash "></i> </span></td>
            </tr>
        }

    </tbody>

</table>
