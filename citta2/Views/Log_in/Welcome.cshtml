@model anchor1.Models.vw_collect 



@{
    ViewBag.Title = "Welcome Page";
    string staffno = Model.ws_code;
    anchor1.Models.worksess worksess = (anchor1.Models.worksess)Session["worksess"];
    string[] pcar = worksess.pcar;
    string tempimg;
    //string tempstring = Session["bye_mess"].ToString();
}

<div>
    <p class="portal-name"> @worksess.portalname </p>
    <p class="portal-mess"> @Html.Raw(worksess.bye_mess) </p>
    
    @*Html.Partial("menu")*@

    @if (pcar[0] != "") {

    <div id="myCarousel" class="carousel slide carousel-size" data-ride="carousel">
  <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
         @for (int iq = 1; iq < 20; iq++)
         {
             if (pcar[iq] != "")
             {
                <li data-target="#myCarousel" data-slide-to="@iq"></li>
             }
         }
      </ol>

  <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
    @for (int ictr = 0; ictr < 20; ictr++)
    {
        tempimg = "../../Uploads/" + pcar[ictr];
        if (pcar[ictr] != "")
        {

            if (ictr==0)
            {
                @:<div class="item active">
            }
            else {
                @:<div class="item">
            }
            <img src="@tempimg" alt="Image" />
            @:</div>
        }
        
    }

    </div>  

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>


        @:</div>
    }
    </div>
