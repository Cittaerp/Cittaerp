@model  CittaErp.Models.vw_genlay

        <div>
            <div class="row form-group">
                <label for="TermCode" class="col-sm-5 control-label">Category Id</label>
                <div class="col-sm-3">
                    @Html.TextBoxFor(m => m.vwstring3, ViewBag.action_flag == "Create" ? (object)new { @class = "form-control", @maxlength = 10 } : new { @class = "form-control", @disabled = "disabled" })
                    @Html.ValidationMessageFor(m => m.vwstring3)
                </div>
            </div>
         
            <div class="row form-group">
                <label for="TermCode" class="col-sm-5 control-label">Category</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.vwstring0, new { @class = "form-control", @maxlength = 50, @required = "required" })
                </div>
            </div>

            <div class="row form-group">
                <label for="DateTo" class="col-sm-5 control-label">Account Group</label>
                <div class="col-sm-7 myradio">
                    <label class="radio-inline">
                        @Html.RadioButtonFor(m => m.vwstring1, "B") Balance Sheet
                    </label>

                    <label class="radio-inline">
                        @Html.RadioButtonFor(m => m.vwstring1, "I") Income Statement
                    </label>

                    <label class="radio-inline">
                        @Html.RadioButtonFor(m => m.vwstring1, "M") Memo Account
                    </label>
                </div>
               </div> 
            <div class="row form-group">
                <label for="NumberDays" class="col-sm-5 control-label">Reporting Sequence</label>
                <div class="col-sm-1">
                    @Html.TextBoxFor(m => m.vwint1, ViewBag.action_flag == "Create" ? (object)new { @class = "form-control", maxlength = 4, @required = "required" } : new { @class = "form-control", maxlength = 4, @required = "required" })
                </div>
            </div>
            <div class="row form-group">
                <label for="Note" class="col-sm-5 control-label"> Note</label>
                <div class="col-sm-5">
                    @Html.TextAreaFor(m => m.vwstring2, new { @class = "form-control", rows = "6" })
                </div>
            </div>
            <div class="row form-group">
                <label class="col-sm-5 control-label">Inactive</label>
                <div class="col-sm-6 mycheckq">
                    @Html.CheckBoxFor(model => Model.vwbool0, new { @id = "activate_yesno" })
                    <label for="activate_yesno">
                        @( Model.vwbool0 ? "On" : "Off")
                    </label>
                </div>
            </div>
        </div>
