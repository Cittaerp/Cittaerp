@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model CittaErp.Models.BK_001_BANK
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="">
        <h3>Bank Details</h3>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="code" class="col-sm-3 control-label">Bank Code</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.bank_code, new { @class = "form-control", maxlength = 10 })
                </div>
            </div>
            <div class="form-group">
                <label for="PeriodNumber" class="col-sm-3 control-label">Name</label>
                <div class="col-sm-4">

                    @Html.TextBoxFor(m => m.bank_name, new { @class = "form-control", maxlength = 50 })
                </div>
            </div>
            <div class="form-group">
                <label for="PeriodNumber" class="col-sm-3 control-label">Branch</label>
                <div class="col-sm-4">

                    @Html.TextBoxFor(m => m.branch, new { @class = "form-control", maxlength = 50 })
                </div>
            </div>
            <div class="form-group">
                <label for="Address" class="col-sm-3 control-label">Address</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.address1, new { @class = "form-control", maxlength = 250 })
                    @Html.TextBoxFor(m => m.address2, new { @class = "form-control", maxlength = 250 })
                </div>
            </div>
            <div class="form-group">
                <label for="City" class="col-sm-3 control-label">City</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.city, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="postal_code" class="col-sm-3 control-label">Postal Code</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.postal_code, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="Country" class="col-sm-3 control-label">Country</label>
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.country, ViewBag.country as SelectList, "Select", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="State" class="col-sm-3 control-label">State</label>
                <div class="col-sm-4">
                    @Html.DropDownListFor(m => m.state, ViewBag.state as SelectList, "Select", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="Email" class="col-sm-3 control-label">Email</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="website" class="col-sm-3 control-label">Website</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.website, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="phone number" class="col-sm-3 control-label">Phone Number</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.phone_number, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="account number" class="col-sm-3 control-label">Account Number</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.bank_acc_number, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="account number" class="col-sm-3 control-label">Payment Option</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.default_payment_opt, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
