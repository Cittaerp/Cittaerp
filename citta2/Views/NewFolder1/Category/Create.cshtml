@model CittaErp.Models.GL_001_CATEG
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Category";
}

<div class="container-fluid">
    <form class="form-horizontal" role="form">
        <h3>Account Category</h3>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="Description" class="col-sm-3 control-label">Description</label>
                <div class="col-sm-7">
                    <!--<input type="text" placeholder="" class="form-control" autofocus required maxlength="50">-->
                    @Html.TextBoxFor(m => m.acct_cat_sequence, new { @class = "form-control", maxlength = 50,required ="required"})
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3">Report Group</label>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Balance Sheet">Balance Sheet -->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "B") Balance Sheet
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Income Statement">Income Statement-->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "I") Income Statement
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Memo Account">Memo Account-->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "M") Memo Account
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label for="ReportSequence" class="col-sm-3 control-label">Report Sequence</label>
                    <div class="col-sm-3">
                    <!--<input type="text" placeholder="e.g 001" class="form-control" autofocus required maxlength="4">-->
                        @Html.TextBoxFor(m => m.acct_cat_rpt_sequence, new {@class = "form-control",type = "number", min =1, required = "required",style = "width : 40"})
                    </div>
                </div>

                <div class="form-group">
                    <label for="Note" class="col-sm-3 control-label"> Note</label>
                    <div class="col-sm-7">
                       <!--<textarea class="form-control" rows="6"> </textarea>-->
                        @Html.TextAreaFor(m => m.note, new{@class = "form-control", rows = 6})
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-9 col-sm-offset-3">
                        <button type="submit" class=" btn btn-primary btn-default">Submit</button>
                        <a class="btn  btn-primary btn-default" href="index">Back To List</></a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>




