@model CittaErp.Models.GL_001_CATEG
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "CategoryList";
}
<h2>Account Category</h2>
<div class="container-fluid">
    <div class="row">


        <div class="col-md-12">
            <h4>Details</h4>
            <a class="btn btn-default" href="category">Add New</></a>
            <div class="table-responsive">


                <table id="mytable" class="table table-bordred table-striped">

                    <thead>

                    <th>Description</th>
                    <th>Report Group</th>
                    <th>Report Sequence</th>
                    <th>Note</th>
                    <th>Edit</th>
                    <th>Delete</th>
                    </thead>
                    <tbody>

                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                            <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#link"><span class="glyphicon glyphicon-trash"></span></button></p></td>
                        </tr>

                    </tbody>

                </table>


                <div class="clearfix"></div>
                <ul class="pagination pull-right">
                    <li class="disabled"><a href="#"><span class="glyphicon glyphicon-chevron-left"></span></a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-chevron-right"></span></a></li>
                </ul>

            </div>

        </div>
    </div>
</div>


<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    
                    @Html.TextBoxFor(m => m.acct_cat_sequence, new { @class = "form-control", maxlength = 50 })
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Balance Sheet">Balance Sheet -->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "B") Balance Sheet
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Income Statement">Income Statement-->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "I") Income Statement
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Memo Account">Memo Account-->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "M") Memo Account
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

                   @Html.TextBoxFor(m => m.acct_cat_rpt_sequence, new { @class = "form-control", type = "number", min = 1 }) 
                </div>
                <div class="form-group">
                <!--<textarea rows="2" class="form-control" placeholder=""></textarea>-->
                    @Html.TextAreaFor(m => m.note, new { @class = "form-control", })
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<div class="modal fade" id="link" tabindex="-1" role="dialog" aria-labelledby="link" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Delete Your Detail</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    
                    @Html.TextBoxFor(m => m.acct_cat_sequence, new { @class = "form-control", maxlength = 50,@readonly = "readonly"})
                </div>
                <div class="form-group">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Balance Sheet">Balance Sheet -->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "B", new { @readonly = "readonly" }) Balance Sheet
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Income Statement">Income Statement-->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "I" , new { @readonly = "readonly"}) Income Statement
                                </label>
                            </div>
                            <div class="col-sm-4">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Memo Account">Memo Account-->
                                    @Html.RadioButtonFor(m => m.acct_cat_rpt_group, "M", new { @readonly = "readonly"})Memo Account
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">

             <!--<input class="form-control " type="text" placeholder="" readonly>-->
                    @Html.TextBoxFor(m => m.acct_cat_rpt_sequence, new { @class = "form-control", type = "number", min = 1, @readonly = "readonly"})
                </div>
                <div class="form-group">
                <!--<textarea rows="2" class="form-control" placeholder="" readonly></textarea>-->
                    @Html.TextAreaFor(m => m.note, new { @class = "form-control",@readonly = "readonly"})
                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-danger" style="width: 100%;" data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>







