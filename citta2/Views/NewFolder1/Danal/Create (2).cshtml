@model  CittaErp.Models.GB_001_DANAL
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="C">
        <h3>Ware House Settings</h3>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="itemcode" class="col-sm-5 control-label">Header Sequence</label>
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.header_sequence, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label for="analysisheader" class="col-sm-5 control-label">Analysis Code</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.analysis_code, new { @class = "form-control", maxlength = 10 })

                </div>
            </div>
            <div class="form-group">
                <label for="analysiscode" class="col-sm-5 control-label">Analysis Description</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.analysis_description, new { @class = "form-control", maxlength = 10 })
                </div>
            </div>
                <div class="form-group">
                    <label class="control-label col-sm-5">Want Data Range?</label>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-5">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Balance Sheet">Balance Sheet -->
                                    @Html.RadioButtonFor(m => m.date_range_limit, "Y", new { @id = "yes" }) Yes
                                </label>
                            </div>
                            <div class="col-sm-5">
                                <label class="radio-inline">
                                    <!--<input type="radio" id="" value="Income Statement">Income Statement-->
                                    @Html.RadioButtonFor(m => m.date_range_limit, "N", new { @id = "no" }) No
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="display:none;" id="click">
                    <div class="form-group">
                        <label for="quotesequence" class="col-sm-5 control-label">Range Start</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.date_from, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="quotesequence" class="col-sm-5 control-label">Range End</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.date_to, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                </div>

            
            <div class="form-group">
                <label for="Note" class="col-sm-5 control-label"> Note</label>
                <div class="col-sm-7">
                    @Html.TextAreaFor(m => m.note, new { @class = "form-control", rows = "6" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-5">
                    <button type="submit" class="btn btn-primary btn-default">Submit</button>
                    <a class="btn  btn-primary btn-default" href="index">Back To List</></a>
                </div>
            </div>
        </div>
    </form>
</div>






