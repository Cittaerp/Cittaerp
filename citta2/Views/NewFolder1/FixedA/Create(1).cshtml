@model CittaErp.Models.FA_001_ASSET
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="">
        <h3>Fixed Asset Settings</h3>

        <div class="tabbable">
            <!-- Only required for left/right tabs -->
            <ul class="nav nav-tabs">
                <li class="active"><a href="#tab1" data-toggle="tab">Asset Information</a></li>
                <li><a href="#tab2" data-toggle="tab">Asset Location</a></li>
                <li><a href="#tab3" data-toggle="tab">Depreciation Settings</a></li>
                <li><a href="#tab4" data-toggle="tab">Accounts</a></li>
                <li><a href="#tab5" data-toggle="tab">Revaluation</a></li>
                <li><a href="#tab6" data-toggle="tab">Other Information</a></li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tab1">
                    <div class="col-lg-6">
                        <h4>Asset Information</h4>
                        <div class="form-group">
                            <label for="code" class="col-sm-5 control-label">Asset Reference Number</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.reference_asset_code, new { @class = "form-control", maxlength = 50 })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="PeriodNumber" class="col-sm-5 control-label">Asset Description</label>
                            <div class="col-sm-5">

                                @Html.TextBoxFor(m => m.description, new { @class = "form-control", maxlength = 50 })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-5">Is Asset a Component of another Asset?</label>
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-5">
                                        <label class="radio-inline">
                                            <!--<input type="radio" id="" value="Balance Sheet">Balance Sheet -->
                                            @Html.RadioButtonFor(m => m.parent_asset_code, "B", new { @id = "yes" }) Yes
                                        </label>
                                    </div>
                                    <div class="col-sm-5">
                                        <label class="radio-inline">
                                            <!--<input type="radio" id="" value="Income Statement">Income Statement-->
                                            @Html.RadioButtonFor(m => m.parent_asset_code, "I", new { @id = "no" }) No
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group" style="display:none;" id="click">
                            <div class="form-group">
                                <label for="Analysis" class="col-sm-5 control-label">Parent Asset Code</label>
                                <div class="col-sm-5">
                                    <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                    @Html.DropDownListFor(m => m.parent_asset_code, ViewBag.parent_asset_code as SelectList, "Select", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="PeriodNumber" class="col-sm-5 control-label">Manufacturer</label>
                            <div class="col-sm-5">

                                @Html.TextBoxFor(m => m.manufacturer, new { @class = "form-control", maxlength = 50 })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Address" class="col-sm-5 control-label">Model</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.model, new { @class = "form-control", maxlength = 50 })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="City" class="col-sm-5 control-label">Specification</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.asset_specs, new { @class = "form-control", maxlength = 50 })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="postal_code" class="col-sm-5 control-label">Supplier</label>
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.supplier, ViewBag.supplier as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <br />
                        <br />
                        <div class="form-group">
                            <label for="Country" class="col-sm-5 control-label">Date of Purchase</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.purchase_date, new { @class = "form-control", type = "date" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="State" class="col-sm-5 control-label">Commissioning Date</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.comm_date, new { @class = "form-control", type = "date" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Email" class="col-sm-5 control-label">Insurance Policy</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.insurance_policy, new { @class = "form-control", maxlength = 150})
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="website" class="col-sm-5 control-label">Insurance Policy Cover Amount</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.policy_sum_ins_amt, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="phone number" class="col-sm-5 control-label">Policy Expiry Date</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.policy_expiry_date, new { @class = "form-control", type = "date" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="account number" class="col-sm-5 control-label">Purchase Cost</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.asset_cost, new { @class = "form-control", @readonly = "readonly"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="account number" class="col-sm-5 control-label">Depreciation Cost to Date</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.depreciation_to_date, new { @class = "form-control", @readonly = "readonly" })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="tab-pane" id="tab2">
                    <div class="col-lg-6">
                        <h4>Asset Location</h4>
                        <div class="form-group">
                            <label for="contact name" class="col-sm-4 control-label">Asset Location</label>
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.asset_location, ViewBag.asset_location as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="job title" class="col-sm-4 control-label">Asset User</label>
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.asset_user, ViewBag.asset_user as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="contact email" class="col-sm-4 control-label">Department</label>
                            <div class="col-sm-5">
                               @Html.DropDownListFor(m => m.department, ViewBag.department as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>

                    </div>
                </div>
                <div class="tab-pane" id="tab3">
                    <div class="col-lg-6">
                        <h4>Depreciation Settings</h4>
                        <div class="form-group">
                            <label for="tax" class="col-sm-5 control-label">Depreciation Type</label>
                            <div class="col-sm-5">
                                @Html.DropDownListFor(m => m.depreciation_type, new SelectList(new List<Object>{new { value = "S" , text = "Straight Line"  },
                       new { value = "R" , text = "Reducing Balance" }, new { value = "A" , text = "Amortisation" }}, "value", "text", "S"), new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Assets Economic Useful Life</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.intial_useful_life, new { @class = "form-control", style = "width : 60px"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Depreciation start Date</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.initial_start_date, new { @class = "form-control", type = "date" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Residual Value</label>
                            <div class="col-sm-5">
                                @Html.TextBoxFor(m => m.residual_value, new { @class = "form-control", style = "width : 60px" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="tab4">
                    <div class="col-lg-6">
                        <h4>Accounts</h4>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Ledger Asset Code</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(m => m.gl_asset_acc_code, ViewBag.gl_asset_acc_code as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Ledger Accumulation Depreciation Code</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(m => m.gl_accum_depn_code, ViewBag.gl_accum_depn_code as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Ledger Depreciation Expense Code</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(m => m.gl_depn_expense_code, ViewBag.gl_depn_expense_code as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Ledger Disposal Code</label>
                            <div class="col-sm-6">
                                @Html.DropDownListFor(m => m.gl_disposal_code, ViewBag.gl_disposal_code as SelectList, "Select", new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="tab5">
                    <div class="col-lg-6">
                        <h4>Revaluation</h4>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Revaluation Start Date</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.revalued_start_date, new { @class = "form-control", type = "date", @readonly = "readonly"})
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Revalued Amount</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.revalued_cost, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="currency" class="col-sm-5 control-label">Revalued Economic Useful Life</label>
                            <div class="col-sm-4">
                                @Html.TextBoxFor(m => m.revalued_useful_life, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="tab6">
                    <div class="col-lg-6">
                        <h4>Other Information</h4>
                        <div class="form-group">
                            <label for="Analysis" class="col-sm-5 control-label">Analysis</label>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence1, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code1, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence2, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code2, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="AccountName" class="col-sm-5 control-label">Analysis</label>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence3, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code3, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence4, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code4, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="AccountName" class="col-sm-5 control-label">Analysis</label>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence5, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code5, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence6, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code6, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="AccountName" class="col-sm-5 control-label">Analysis</label>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence7, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code7, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence8, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code8, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="AccountName" class="col-sm-5 control-label">Analysis</label>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence9, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code9, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                            <div class="col-sm-3">
                                <!--<input type="number" placeholder="Header sequence" class="form-control" autofocus required min="0" max="999">-->
                                @Html.DropDownListFor(m => m.header_sequence10, ViewBag.header_sequence as SelectList, "Select Header", new { @class = "form-control" })
                                @Html.DropDownListFor(m => m.analysis_code10, ViewBag.analysis_code as SelectList, "Select Analysis Code", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="Note" class="col-sm-5 control-label"> Note</label>
                            <div class="col-sm-7">
                                @Html.TextAreaFor(m => m.note, new { @class = "form-control", rows = "6" })
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3">
                            <a class="btn btn-default" href="">Click to Attach Document</></a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-9 col-sm-offset-3">
                            <button type="submit" class="btn btn-primary btn-default">Submit</button>
                            <a class="btn  btn-primary btn-default" href="index">Back To List</></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>




