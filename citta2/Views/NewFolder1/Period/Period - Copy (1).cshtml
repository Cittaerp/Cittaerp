@model  CittaErp.Models.GB_001_PCT
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Period";
}

<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="C">
        <h3>Period Calender Setting</h3>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="PeriodNumber" class="col-sm-3 control-label">Period Number</label>
                <div class="col-sm-2">

                    @Html.TextBoxFor(m => m.period_number, new { @class = "form-control", style = "width : 60px", type = "number", min = 1, max = 60 })
                </div>
            </div>
            <div class="form-group">
                <label for="DateFrom" class="col-sm-3 control-label">Date From</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.date_from, new { @class = "form-control", type = "date" })
                </div>
            </div>
            <div class="form-group">
                <label for="DateTo" class="col-sm-3 control-label">Date To</label>
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.date_from, new { @class = "form-control", type = "date" })
                </div>
            </div>
            <div class="form-group">
                <label for="Note" class="col-sm-3 control-label"> Note</label>
                <div class="col-sm-7">
                    @Html.TextAreaFor(m => m.note, new { @class = "form-control", rows = "6" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-default">Submit</button>
                    <a class="btn  btn-primary btn-default"  href="periodlist">Back To List</></a>
                </div>

            </div>
        </div>
    </form>
</div>