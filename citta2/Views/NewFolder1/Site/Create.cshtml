@model  CittaErp.Models.DC_001_DISC
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <form class="form-horizontal" role="form" method="post" action="C">
        <h3>Site Settings</h3>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="sitecode" class="col-sm-5 control-label">Site Code</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.parameter_code, new { @class = "form-control", maxlength = 50})
                </div>
            </div>
            <div class="form-group">
                <label for="sitename" class="col-sm-5 control-label">Site Name</label>
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.parameter_name, new { @class = "form-control", maxlength = 20, })
                </div>
            </div>

            <div class="form-group">
                <label for="Note" class="col-sm-5 control-label"> Note</label>
                <div class="col-sm-7">
                    @Html.TextAreaFor(m => m.note, new { @class = "form-control", rows = "6" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-5">
                    <a class="btn btn-default" href="">Click to Attach Document</></a>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-9 col-sm-offset-5">
                    <button type="submit" class="btn btn-primary btn-default">Submit</button>
                    <a class="btn  btn-primary btn-default" href="index">Back To List</></a>
                </div>
            </div>
        </div>
    </form>
</div>



