<h3>Property Contract First Payment</h3>
@Html.ActionLink("Add New", "Create", "", new { @class = "btn btn-primary", @style = "color:white" })
<p></p>

        <table class="myTable1 display">

    <thead>
        <tr>
            <th>Contract Id</th>
            <th>Property </th>
            <th>Bank</th>
            <th>Payment Amount</th>
            <th>Transaction</th>
            <th>Edit</th>
            <th>Delete</th>
            <th>Print</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.vwstring5</td>
                <td>@item.vwstring0</td>
                <td>@item.vwstring1</td>
                <td class="numformat">@item.vwdecimal0</td>
                @if (item.vwstring3 != "")
                {
                    <td>@item.vwstring3.Substring(6, 2)/@item.vwstring3.Substring(4, 2)/@item.vwstring3.Substring(0, 4)</td>
                }
                else
                {
                    <td>01/01/0001</td>
                }
                <td>
                    @Html.ActionLink("E", "Edit", new { key1 = @item.vwstring5 }, new { @class = "btn btn-warning btn-xs glyphicon glyphicon-pencil" })
                </td>
                <td><span class="btn btn-danger btn-xs deleteitem" data-keyg="@item.vwstring5"> <i class="glyphicon glyphicon-trash "></i> </span></td>
                <td>@Html.ActionLink("P", "Receipt5", "Receipt", new { ptype1 = "CFP" }, new { @class = "btn btn-warning btn-xs glyphicon glyphicon-print" })</td>
              </tr>
        }

    </tbody>

</table>
