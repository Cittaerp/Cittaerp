                        </div>
                    </div>
                </div>*@

                <div class="row form-group" style="display:none;" id="shw_mtg">
                    <div class="row form-group">
                        <label class="col-sm-4 control-label">Interest Rate</label>
                        <div class="col-sm-3">
                            @Html.TextBoxFor(m => m.vwdecimal4, new { @class = "form-control" })
                        </div>
                    </div>
                    @*<div class="row form-group">
                        <label class="col-sm-4 control-label">Repayment Amount</label>
                        <div class="col-sm-3">
