@model  CittaErp.Models.vw_genlay

@{
    string[] head_dat = new string[20];

}

<div class="tabbable">
    <ul class="nav nav-tabs" id="tabs">
        <li class="active"><a href="#tab1" data-toggle="tab">Price Information</a></li>
        <li><a href="#tab2" data-toggle="tab">Document Management</a></li>

    </ul>
    <br />
    <div class="tab-content">
        <div class="tab-pane active" id="tab1">
            <div>
                <div class="row form-group">
                    <label for="TermCode" class="col-sm-4 control-label">Item</label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(m => m.vwstring0, ViewBag.item_code as SelectList, "Select Item", ViewBag.action_flag == "Create" ? (object)new { @class = "form-control" } : new {@class = "form-control", @disabled = "disabled" })
                        @Html.ValidationMessageFor(m => m.vwstring0)
                    </div>
               
                </div>
                <div class="row form-group">
                    <label for="AnalysisHeader" class="col-sm-4 control-label">Tenor</label>
                    <div class="col-sm-3">
                        @Html.TextBoxFor(m => m.vwint0, ViewBag.action_flag == "Create" ? (object)new { @class = "form-control" } : new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="CurrencyID" class="col-sm-4 control-label">Currency ID</label>
                    <div class="col-sm-6">
                        @Html.DropDownListFor(m => m.vwstring5, ViewBag.currency as SelectList, "Select", ViewBag.action_flag == "Create" ? (object)new { @class = "form-control" } : new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email" class="col-sm-4 control-label">Promo</label>
                    <div class="col-sm-4">
                        @Html.DropDownListFor(m => m.vwstring6, ViewBag.promo as SelectList, "Select", ViewBag.action_flag == "Create"? (object)new { @class = "form-control" } : new { @class = "form-control", @disabled = "disabled" })
                    </div>
                </div>
                <div class="row form-group">
                    <label for="DateTo" class="col-sm-4 control-label">Price Inclusive of Tax?</label>
                    <div class="col-sm-7 myradio">
                        <label class="radio-inline">
                            @Html.RadioButtonFor(m => m.vwstring2, "Y") Yes
                        </label>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        <label class="radio-inline">
                        @Html.RadioButtonFor(m => m.vwstring2, "N") No
                        </label>
                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-sm-4 control-label"> Price</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(m => m.vwdecimal0, new { @class = "form-control numformat ", maxlength = 20, id = "id_depflat" })

                    </div>
                </div>
                <div class="row form-group">
                    <label class="col-sm-4 control-label"> Monthly Installment</label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(m => m.vwdecimal1, new { @class = "form-control numformat ", maxlength = 20 })

                    </div>
                </div>

                <br />
                <div class="form-inline">
                    <label class="col-sm-4 control-label">Deposit flat amount </label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(m => m.vwdecimal2, new { @class = "form-control numformat ", style = "display:inline" })
                </div>
                </div>
                <div class=" row form-inline">
                    <label class="col-sm-3 control-label">Or Deposit Percent </label>
                    <div class="col-sm-2">
                        @Html.TextBoxFor(m => m.vwdecimal3, new { @class = "form-control", style = "display:inline", id = "id_depper" })
                    </div>
                </div>
                <br />
               
                <div class="row form-group">
                    <label class="col-sm-4 control-label">Property Acquisition Options </label>
                    <div class="col-sm-7 myradio">
                        <label class="radio-inline">
                            @Html.RadioButtonFor(m => m.vwstring3, "I", new { id = "id_int" }) Instalment to acquisition
                        </label>
                        <label class="radio-inline">
                            @Html.RadioButtonFor(m => m.vwstring3, "M", new { id = "id_mtg" }) Mortgage
                        </label>

                        @Html.HiddenFor(m => m.vwstring3, new { @id = "pao" })
                    </div>
                </div>
