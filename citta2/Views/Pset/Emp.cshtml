        <div class="tab-pane" id="tab5">
            <h4>Termination Penalty</h4>
            <div class=" form-inline">
                <label class="col-sm-4 control-label">Percentage</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.vwdecimal1, new { @class = "form-control numformat", @maxlength = 11, style = "display:inline", id = "gt_disamountr" })
                </div>
            </div>

            <div class=" row form-inline">
                <label class="col-sm-4 control-label">Or Flat Amount </label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.vwdecimal0, new { @class = "form-control numformat", @maxlength = 7, style = "display:inline", id = "gt_dispercentr" })
                </div>
            </div>

            <p></p>
            <div class="form-group">
                <label for="CompanyCode" class="col-sm-4 control-label">GL Account</label>
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.vwstring1, ViewBag.glcomt as SelectList, "Select", new { @class = "form-control" })
                </div>
            </div>
            <hr />
            <h4>Transfer Fee</h4>
            <div class=" form-inline">
                <label class="col-sm-4 control-label"> Percentage</label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.vwdecimal3, new { @class = "form-control numformat", @maxlength = 11, style = "display:inline", id = "gt_disamountr" })
                </div>
            </div>
            <div class="row form-inline">
                <label class="col-sm-4 control-label">Or Flat Amount</label>
