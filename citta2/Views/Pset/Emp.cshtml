                    @Html.TextBoxFor(m => m.vwdecimal2, new { @class = "form-control numformat", @maxlength = 7, style = "display:inline", id = "gt_dispercentr" })
                </div>
            </div>

            <p></p>

            <div class="form-group">
                <label for="CompanyCode" class="col-sm-4 control-label">GL Account</label>
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.vwstring2, ViewBag.glcom as SelectList, "Select", new { @class = "form-control" })
                </div>
            </div>
            <hr />
          
            @Html.Partial("_navbuttons")
        </div>
       
        <div class="tab-pane" id="tab3">

            <div class="form-group">
                <label class="col-sm-4 control-label">WHT Rate </label>
                <div class="col-sm-2">
                    @Html.TextBoxFor(m => m.vwdecimal4, new { @class = "form-control numformat", @maxlength = 15 })
                </div>
            </div>
            <div class="row form-group">
                <label for="currency" class="col-sm-4 control-label"> GL WHT Account </label>
                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.vwstring5, ViewBag.wht as SelectList, "Select", new { @class = "form-control", id = "glwht" })
                </div>
            </div>
            <br />
             <div class="row form-group">
