                <div class="col-sm-3">
                    @Html.DropDownListFor(m => m.vwstring8, ViewBag.staff as SelectList, "Select", new { @class = "form-control", id = "gldcom" })
                </div>
            </div>

            @Html.Partial("_navbuttons")
        </div>
       
         <div class="tab-pane" id="tab7">

            <div class="row form-group">
                <label for="currency" class="col-sm-4 control-label"> Gift Reason Code </label>
